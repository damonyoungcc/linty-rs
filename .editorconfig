# top-most EditorConfig file
root = true

# 默认规则（所有文件）
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Rust 文件：官方推荐 4 空格
[*.rs]
indent_size = 4

# JS / TS / JSON / CSS / HTML：常见习惯 2 空格
[*.{js,jsx,ts,tsx,json,css,scss,html,yml,yaml}]
indent_size = 2

# Markdown：不要自动删掉行尾空格（避免破坏换行）
[*.md]
trim_trailing_whitespace = false
